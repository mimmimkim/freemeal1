<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_volunteer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무료급식소 후원"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#C9A6FA"
            android:gravity="center"
            android:text="위치"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/volunteer_lacation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="**시 **동"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#C9A6FA"
            android:gravity="center"
            android:text="일시"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/volunteer_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="***-****-******"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#C9A6FA"
            android:gravity="center"
            android:text="인원"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/volunteer_person"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="123-1234-1234"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button

            android:id="@+id/btn_vol_popupclose"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="닫기"
            android:layout_marginRight="20dp"
            />

        <Button

            android:id="@+id/btn_apply"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="봉사 신청"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


</LinearLayout>